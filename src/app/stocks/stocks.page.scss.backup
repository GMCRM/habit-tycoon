// Mobile-specific layout optimization
@media (max-width: 768px) {
  .my-habit-businesses {
    .habit-business-item {
      .item-content {
        flex-direction: column;
        align-items: stretch;
        gap: 8px;
        
        .business-icon {
          position: absolute;
          top: 12px;
          left: 12px;
          font-size: 1.8rem;
          min-width: auto;
          width: 32px;
          height: 32px;
          display: flex;
          align-items: center;
          justify-content: center;
          background: rgba(0, 0, 0, 0.3);
          border-radius: 8px;
          border: 1px solid rgba(255, 215, 0, 0.3);
          z-index: 10;
        }
        
        .business-info {
          margin-left: 0;
          padding-left: 0;
          width: 100%;
          
          .business-name {
            margin-left: 48px; // Make room for top-left emoji
            margin-bottom: 4px;
            font-size: 1.1rem;
          }
          
          .owner-section {
            margin-left: 48px; // Make room for top-left emoji
            margin-bottom: 8px;
            
            .owner-label {
              font-size: 0.7rem;
            }
            
            .owner-name {
              font-size: 0.9rem;
