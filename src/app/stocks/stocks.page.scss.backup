// Import the same styling patterns as homepage

// Custom scrollable content
.scrollable-content {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  
  /* Hide scrollbar for WebKit browsers (Chrome, Safari, Edge) */
  &::-webkit-scrollbar {
    display: none !important;
    width: 0 !important;
  }
  
  /* Hide scrollbar for Firefox */
  scrollbar-width: none;
  
  /* Hide scrollbar for Internet Explorer/Edge */
  -ms-overflow-style: none;
}

.page-container {
  background: var(--ion-background-color);
  min-height: 100vh;
  padding-bottom: 90px; /* Space for bottom navigation */
}

// Header section styling - matches homepage spacing
.header-section {
  text-align: center;
  margin-bottom: 20px;
  padding: 16px;
  
  h1 {
    margin: 0 0 8px 0;
    color: var(--ion-color-primary);
    font-size: 1.6rem;
    font-weight: bold;
    text-shadow: 0 0 8px rgba(255, 215, 0, 0.3);
  }
  
  p {
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
  }
}

// Tab switcher styling
.tab-switcher {
  display: flex;
  gap: 12px;
  margin-bottom: 20px;
  padding: 0 16px;
  
  ion-button {
    flex: 1;
    --border-radius: 10px;
    font-weight: 600;
  }
}

// Stats grid styling - matches homepage
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 8px;
  margin-bottom: 24px;

  .stat-card {
    background: var(--business-item-background);
    border: var(--business-item-border);
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.1);
    
    &.clickable-card {
      cursor: pointer;
      transition: all 0.3s ease;
      
      &:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 215, 0, 0.2);
      }
      
      &:active {
        transform: translateY(0);
      }
      
      &.active-tab {
        border: 2px solid var(--ion-color-primary);
        box-shadow: 0 4px 20px rgba(255, 215, 0, 0.3);
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.05) 0%, rgba(255, 165, 0, 0.02) 100%);
      }
    }
    
    ion-card-content {
      padding: 16px;
      
      .stat-content {
        display: flex;
        align-items: center;
        gap: 12px;
        
        ion-icon {
          font-size: 2rem;
          color: var(--ion-color-primary);
          filter: drop-shadow(0 0 8px rgba(255, 215, 0, 0.4));
        }
        
        .stat-info {
          h2 {
            margin: 0;
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--cash-color);
            text-shadow: 0 0 8px rgba(255, 215, 0, 0.3);
          }
          
          p {
            margin: 0;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.85rem;
          }
        }
      }
    }
  }
}

// Dividend potential styling
.dividend-potential {
  color: var(--ion-color-success) !important;
  font-weight: 600;
}

// User info styling - matches homepage
.user-info {
  background: linear-gradient(135deg, #1e1e3f 0%, #16213e 100%);
  border: 1px solid rgba(255, 215, 0, 0.3);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 20px;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
  
  .welcome-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    
    .welcome-text {
      h2 {
        margin: 0;
        color: var(--ion-color-primary);
        font-size: 1.4rem;
        text-shadow: 0 0 8px rgba(255, 215, 0, 0.3);
      }
      
      p {
        margin: 4px 0 0 0;
        color: rgba(255, 255, 255, 0.8);
      }
    }
    
    .cash-display {
      text-align: right;
      display: flex;
      align-items: flex-end;
      gap: 16px;
      
      .networth-display {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        padding: 8px 12px;
        background: var(--ion-color-dark);
        border: 2px solid #FFD700;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
        
        .networth-amount {
          font-size: 1.3rem !important;
          font-weight: 700;
          color: #FFD700;
          text-shadow: 0 0 8px rgba(255, 215, 0, 0.4);
        }
        
        .networth-label {
          font-size: 0.75rem;
          color: white;
          margin-top: 2px;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 1px;
        }
      }
      
      .cash-section {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        padding: 8px 12px;
        background: var(--ion-color-dark);
        border: 2px solid #00FF7F;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 255, 127, 0.3);
      }
      
      .cash-amount {
        font-size: 1.3rem !important;
        font-weight: 700;
        color: #00FF7F;
        text-shadow: 0 0 8px rgba(0, 255, 127, 0.4);
      }
      
      .cash-label {
        font-size: 0.75rem;
        color: white;
        margin-top: 2px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
      }
    }
  }
}

// Stocks sections - match homepage habit-businesses styling
.my-habit-businesses {
  .section-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    padding: 0 8px;
    
    h2 {
      margin: 0;
      flex: 1;
      color: var(--ion-color-primary);
      font-size: 1.4rem;
      font-weight: bold;
      text-shadow: 0 0 8px rgba(255, 215, 0, 0.3);
    }
    
    ion-icon {
      font-size: 1.5rem;
      color: var(--ion-color-primary);
      filter: drop-shadow(0 0 8px rgba(255, 215, 0, 0.4));
    }
  }
  
  // Individual stock/holding items - Adventure Capitalist style
  .habit-business-item {
    background: var(--business-item-background);
    border: var(--business-item-border);
    border-radius: 12px;
    margin: 12px 0;
    padding: 16px;
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.1);
    position: relative;
    overflow: hidden;
    
    // Subtle glow effect
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--ion-color-primary), transparent);
      opacity: 0.6;
    }
    
    .item-content {
      display: flex;
      align-items: center;
      gap: 20px;
      position: relative;
      
      .business-icon {
        font-size: 2.5rem;
        min-width: 50px;
        width: 50px;
        text-align: center;
        filter: drop-shadow(0 0 8px rgba(255, 215, 0, 0.4));
        padding-right: 12px;
      }
      
      .business-info {
        flex: 1;
        
        .business-name {
          margin: 0 0 8px 0;
          font-size: 1.2rem;
          font-weight: bold;
          color: var(--ion-color-primary);
          text-shadow: 0 0 6px rgba(255, 215, 0, 0.3);
        }
        
        .owner-section {
          margin-bottom: 12px;
          text-align: center;
          max-width: 400px;
          margin-left: auto;
          margin-right: auto;
          
          .owner-label {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 2px;
          }
          
          .owner-name {
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.95rem;
            line-height: 1.4;
          }
        }
        
        .habit-description {
          margin: 0 0 12px 0;
          color: rgba(255, 255, 255, 0.9);
          font-size: 0.95rem;
          line-height: 1.4;
        }
        
        .habit-stats {
          display: flex;
          flex-wrap: nowrap;
          gap: 10px;
          justify-content: center;
          max-width: 100%;
          margin: 0 auto 12px auto;
          
          .stat-item {
            display: flex;
            flex-direction: column;
            text-align: center;
            flex: 1;
            min-width: 65px;
            
            .stat-label {
              font-size: 0.68rem;
              color: rgba(255, 255, 255, 0.6);
              text-transform: uppercase;
              letter-spacing: 0.2px;
              margin-bottom: 2px;
              white-space: nowrap;
              overflow: hidden;
              text-overflow: ellipsis;
            }
            
            .stat-value {
              font-weight: bold;
              font-size: 0.82rem;
              white-space: nowrap;
              overflow: hidden;
              text-overflow: ellipsis;
              
              &.streak {
                color: var(--streak-color);
              }
              
              &.total-earned {
                color: var(--earnings-color);
                text-shadow: 0 0 6px rgba(0, 255, 136, 0.3);
              }
            }
          }
        }
        
        // Habit grid styling - match home page exactly
        app-habit-grid {
          margin: 8px 0;
          display: flex;
          justify-content: center;
          width: 100%;
          
          ::ng-deep .content-wrapper {
            width: fit-content !important;
            display: flex !important;
            justify-content: center !important;
            padding: 0 !important;
            margin: 0 !important;
          }
          
          ::ng-deep .habit-grid-container {
            width: fit-content !important;
            max-width: fit-content !important;
            background: rgba(0, 0, 0, 0.3) !important;
            border-radius: 8px !important;
            border-top: 1px solid rgba(255, 215, 0, 0.2) !important;
            padding: 8px !important;
            border: 1px solid rgba(255, 215, 0, 0.2) !important;
            margin: 0 !important;
            overflow: visible !important;
            display: inline-block !important;
          }
          
          ::ng-deep .grid-header {
            margin-bottom: 8px !important;
            width: fit-content !important;
          }
          
          ::ng-deep .month-labels {
            font-size: 10px !important;
            width: fit-content !important;
            margin-left: 20px !important;
            margin-bottom: 8px !important;
            overflow: visible !important;
          }
          
          ::ng-deep .grid-wrapper {
            width: fit-content !important;
            overflow: visible !important;
            padding-bottom: 0 !important;
          }
          
          ::ng-deep .habit-grid {
            width: fit-content !important;
            overflow: visible !important;
          }
          
          // Hide stats for compact display in stocks
          ::ng-deep .grid-stats {
            display: none !important;
          }
        }
        
        // Price badge styling for stocks
        .price-badge {
          display: flex;
          flex-direction: column;
          align-items: flex-end;
          gap: 4px;
          
          .current-price {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--ion-color-primary);
            text-shadow: 0 0 6px rgba(255, 215, 0, 0.3);
          }
          
          .price-change {
            font-size: 0.8rem;
            padding: 2px 6px;
            border-radius: 6px;
            font-weight: 600;
            
            &.price-up {
              color: #10dc60;
              background: rgba(16, 220, 96, 0.15);
              border: 1px solid rgba(16, 220, 96, 0.3);
            }
            
            &.price-down {
              color: #ff4757;
              background: rgba(255, 71, 87, 0.15);
              border: 1px solid rgba(255, 71, 87, 0.3);
            }
            
            &.price-neutral {
              color: #b0b0b0;
              background: rgba(176, 176, 176, 0.15);
              border: 1px solid rgba(176, 176, 176, 0.3);
            }
          }
          
          .shares-owned {
            font-size: 0.8rem;
            color: rgba(255, 255, 255, 0.7);
          }
        }
      }
      
      .earnings-section {
        text-align: center;
        min-width: 120px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        
        .earnings-total {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 4px;
          
          .total-amount {
            font-size: 1.3rem;
            font-weight: bold;
            color: var(--earnings-color);
            text-shadow: 0 0 8px rgba(0, 255, 136, 0.3);
            
            &.profit {
              color: #10dc60;
              text-shadow: 0 0 8px rgba(16, 220, 96, 0.3);
            }
            
            &.loss {
              color: #f53d3d;
              text-shadow: 0 0 8px rgba(245, 61, 61, 0.3);
            }
          }
          
          .earnings-label {
            font-size: 0.75rem;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
          }
          
          .profit-loss {
            font-size: 0.9rem;
            font-weight: 600;
            
            &.profit {
              color: #10dc60;
            }
            
            &.loss {
              color: #f53d3d;
            }
          }
        }
        
        .checkin-action {
          margin-top: 8px;
          
          ion-button {
            --border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            
            &[color="success"] {
              --background: var(--earnings-color);
              --color: #000000;
              --box-shadow: 0 2px 8px rgba(0, 255, 136, 0.3);
            }
            
            &[color="secondary"] {
              --background: rgba(255, 165, 0, 0.8);
              --color: #000000;
              --box-shadow: 0 2px 8px rgba(255, 165, 0, 0.3);
            }
          }
        }
      }
    }
  }
  
  // Empty state styling - matches homepage
  .empty-state {
    text-align: center;
    padding: 40px 20px;
    
    ion-icon {
      font-size: 4rem;
      color: var(--ion-color-medium);
      margin-bottom: 16px;
      opacity: 0.6;
    }
    
    ion-spinner {
      --color: var(--ion-color-primary);
      transform: scale(1.5);
      margin-bottom: 16px;
    }
    
    h3 {
      color: rgba(255, 255, 255, 0.8);
      margin: 0 0 12px 0;
      font-size: 1.2rem;
    }
    
    p {
      color: rgba(255, 255, 255, 0.6);
      margin: 0 0 8px 0;
      line-height: 1.5;
    }
    
    ion-button {
      --border-radius: 8px;
      --padding-start: 20px;
      --padding-end: 20px;
      --padding-top: 12px;
      --padding-bottom: 12px;
      margin-top: 16px;
      font-size: 0.95rem;
      font-weight: 600;
      height: 44px;
      width: auto;
      
      .button-native {
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
      }
      
      ion-icon {
        font-size: 1.1rem;
        margin-right: 8px;
        display: inline-flex;
        align-items: center;
        vertical-align: middle;
      }
      
      &[color="primary"] {
        --box-shadow: 0 3px 10px rgba(var(--ion-color-primary-rgb), 0.3);
      }
    }
  }
}

// Help icon container
.help-icon-container {
  display: flex;
  align-items: center;
  gap: 8px;
  margin: 16px;
  cursor: pointer;
  
  ion-icon {
    font-size: 1.4rem;
    transition: color 0.2s ease;
    
    &:hover {
      color: var(--ion-color-primary);
    }
  }
  
  .help-text {
    font-size: 0.9rem;
    color: var(--ion-color-medium);
    transition: color 0.2s ease;
  }
  
  &:hover .help-text {
    color: var(--ion-color-primary);
  }
}

// Info card styling
.info-card {
  margin: 16px;
  background: rgba(var(--ion-color-primary-rgb), 0.1);
  border: 1px solid rgba(var(--ion-color-primary-rgb), 0.3);
  
  .info-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
    
    .info-title-section {
      display: flex;
      align-items: center;
      gap: 12px;
      
      ion-icon {
        font-size: 1.5rem;
      }
      
      h3 {
        margin: 0;
        color: var(--ion-color-primary);
        font-size: 1.1rem;
        font-weight: 600;
      }
    }
  }
  
  .info-content {
    p {
      margin: 0 0 8px 0;
      font-size: 0.9rem;
      line-height: 1.4;
    }
    
    ul {
      margin: 8px 0;
      padding-left: 16px;
      
      li {
        margin: 4px 0;
        font-size: 0.85rem;
        line-height: 1.3;
        
        strong {
          color: var(--ion-color-primary);
        }
      }
    }
    
    em {
      font-size: 0.85rem;
      color: var(--ion-color-success);
      font-weight: 500;
    }
  }
}

